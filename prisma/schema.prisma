generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ------------------------------
// AUTHENTICATION MODELS
// ------------------------------

enum UserRole {
  USER
  ADMIN
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  role           UserRole  @default(USER)
  accounts       Account[]
  sessions       Session[]
  orders         Order[]
  
  defaultPhone   String?
  defaultCountry String?
  defaultAddress String?
  defaultCity    String?
  defaultState   String?
  defaultPincode String?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  addresses      Address[]
  reviews        Review[]
  wishlist       Wishlist[]
}

model Address {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  fullName  String
  email     String?
  phone     String
  country   String
  address   String
  city      String
  state     String
  pincode   String
  
  isDefault Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum OtpType {
  REGISTER
  RESET
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  code      String
  type      OtpType  @default(REGISTER)
  expires   DateTime
  createdAt DateTime @default(now())
}

// ------------------------------
// CORPORATE INQUIRY MODELS
// ------------------------------

enum InquiryStatus {
  NEW
  CONTACTED
  CLOSED
}

model CorporateInquiry {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  company   String
  email     String
  product   String
  quantity  String
  message   String?
  status    InquiryStatus @default(NEW)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@map("corporate_inquiries")
}

// ------------------------------
// E-COMMERCE MODELS
// ------------------------------

// Enum removed as Category is now free-text

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  price       Float
  images      String[] // Array of Cloudinary image URLs
  category    String   @default("Other")
  color       String?  // e.g. "Red", "Blue", "#FF0000"
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Customization Fields
  isCustomizable   Boolean  @default(false)
  customizationLabel String?  // e.g., "Enter Name for Engraving"

  orderItems OrderItem[] // A product can be in many order items
  variants   ProductVariant[] // One-to-many relation with variants
  reviews    Review[] // One-to-many relation with reviews
  wishlist   Wishlist[]
}

model ProductVariant {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  color     String   // e.g. "Red", "Blue"
  colorCode String?  // e.g. "#FF0000"
  price     Float?   // Optional override, if null use product price
  stock     Int      @default(0)
  images    String[] // Specific images for this variant
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELED
}

model Order {
  id               String      @id @default(auto()) @map("_id") @db.ObjectId
  userId           String      @db.ObjectId
  user             User        @relation(fields: [userId], references: [id])
  totalAmount      Float
  status           OrderStatus @default(PENDING)
  paymentMethod    String      @default("RAZORPAY") // âœ… NEW: "RAZORPAY" or "COD"
  paymentId        String?
  paymentStatus    String?
  shippingAddress  String
  
  // Coupon Info
  couponCode       String?
  discountAmount   Float       @default(0)
  
  items            OrderItem[]
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  @@map("orders")
}

model OrderItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String  @db.ObjectId
  order     Order   @relation(fields: [orderId], references: [id])
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])
  
  quantity Int
  priceAtPurchase Float // Price of the product when the order was placed

  // Stored Customization
  customizationText String? // e.g., "Ismaeel"

  // Variant Information (Snapshot)
  selectedColor String? // e.g., "Red"
  selectedVariantId String? // Optional reference to the variant ID
}


// ------------------------------
// REVIEW MODEL
// ------------------------------

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  rating    Int      // 1-5
  comment   String
  images    String[] // Optional review photos
  
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id])
  
  createdAt DateTime @default(now())
}

// ------------------------------
// WISHLIST MODEL
// ------------------------------

model Wishlist {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
}

// ------------------------------
// COUPON MODEL
// ------------------------------

enum DiscountType {
  PERCENTAGE
  FIXED
}

model Coupon {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  code          String       @unique
  discountType  DiscountType
  discountValue Float
  minOrderValue Float        @default(0) // Optional minimum cart value
  expiresAt     DateTime?
  isActive      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

